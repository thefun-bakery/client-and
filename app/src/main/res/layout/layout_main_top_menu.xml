<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_marginTop="5dp">

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rect_main_top_menu_on"
        android:layout_marginRight="1dp"
        android:paddingTop="11dp"
        android:paddingBottom="13dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#000000"
            tools:text="오늘느낌"
            android:text="@string/main_top_menu_today"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rect_main_top_menu_off"
        android:layout_marginRight="1dp"
        android:paddingTop="11dp"
        android:paddingBottom="13dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#000000"
            tools:text="히스토리"
            android:text="@string/main_top_menu_history"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rect_main_top_menu_off"
        android:paddingTop="11dp"
        android:paddingBottom="13dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#000000"
            tools:text="방명록"
            android:text="@string/main_top_menu_guest"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
</LinearLayout>